{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++14",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        },
        {
            "type": "shell",
            "label": "g++ build test",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++14",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}",
                "src/*.cpp",
                "src/tests/*.cpp",
            ]
        }
    ],
    "version": "2.0.0"
}